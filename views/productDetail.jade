                if product
                    // product-details
                    .product-details
                        //product-image
                        .col-sm-5
                            .view-product
                                img(src=product.Image, alt=product.ProductName)
                        ///product-image

                        //product-information
                        .col-sm-7
                            .product-information
                                //img.newarrival(src='/img/product-details/new.jpg', alt='')
                                h2= product.ProductName

                                p= product.ProductDescription

                                - var availability = 'En Stock'
                                if product.UnitsInStock < 1
                                    - availability = 'No disponible'


                                //- p
                                //-     b Categoría:
                                //-     = ' ' + product.CategoryID

                                p
                                    b Descripción:
                                    = ' ' + product.Description

                                p
                                    b Disponibilidad:
                                    = ' ' + availability
                                p
                                    b Año de lanzamiento:
                                    = ' ' + product.ManufactureYear

                                span
                                    span= ' $' + product.ProductPrice
                                    form(action='/cart/' + product.ProductID + '/add', method='POST')
                                        label Cantidad:
                                            input(type='number', name='quantity', value='1')
                                        br
                                        button.btn.btn-default.add-to-cart(type='submit')
                                            i.fa.fa-shopping-cart
                                            |          Añadir al Carrito

                                form(action='/wishlist/' + product.ProductID + '/add', method='POST')
                                        button.btn.btn-default.add-to-wishlist(type='submit')
                                            i.fa.fa-heart
                                            |          Añadir a la Lista de Deseos
                                
                                

